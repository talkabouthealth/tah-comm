<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		implements="org.robotlegs.utilities.modular.core.IModule"
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" layout="vertical" width="400" height="500">
	<fx:Script>
		<![CDATA[
			
			import com.tah.comm.modules.logger.*;
			import com.tah.comm.common.events.LoggingEvent;
			
			import org.robotlegs.core.IContext;
			import org.robotlegs.core.IInjector;
			import org.robotlegs.utilities.modular.core.IModule;
			import org.robotlegs.utilities.modular.core.IModuleContext;
			
			protected var context:IModuleContext;
			

			public function updateGreating(message:String):void
			{
				//topicTitle.text = message + '!!!';
				topicTitle.text = "topicTitle";
			}

			protected function btn_send_clickHandler(event:MouseEvent):void
			{
				txt_history.text += txt_msg.text + '\r';
				txt_msg.text = "";
				trace("btn_send_clickHandler");
				dispatchEvent(new LoggingEvent(LoggingEvent.MESSAGE, "btn_send_clickHandler"));
			}

			[Inject]
			public function set parentInjector(value:IInjector):void
			{
				context = new TextChatModuleContext(this, value);
			}

			public function dispose():void
			{
				context.dispose();
				context = null;
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		
	</fx:Declarations>
	<s:VGroup paddingLeft="5" paddingRight="5" paddingTop="5" paddingBottom="5" width="100%" height="100%">
		<s:Label text="topicTitle" id="topicTitle"/>
		<s:TextArea width="100%" height="410" id="txt_history"/>
		<s:HGroup width="100%">
			<s:TextArea width="303" height="53" id="txt_msg"/>
			<s:Button label="Send" id="btn_send" click="btn_send_clickHandler(event)"/>
		</s:HGroup>
	</s:VGroup>
	
</mx:Module>
